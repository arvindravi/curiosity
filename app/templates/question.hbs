{{content-header params=model}}
<section class="section">
  <div class="container">
    <div class="title">
      <h1>Comments</h1>
    </div>
    <div class="content">
    {{#each model.comments as |comment|}}
      <div class="box">
        <div class="has-text-justified">
          <p>{{comment.text}}</p>
        </div>
      </div>
    {{/each}}
    </div>
  </div>
</section>
